<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    app:cardCornerRadius="6dp"
    android:clickable="true"
    android:layout_margin="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:foreground="?android:attr/selectableItemBackground">


    <TextView
        android:id="@+id/text_crypto_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:text="Crypto"
        android:textSize="16sp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:padding="5dp"/>

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/img_crypto"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/avatar_bounds"-->
            <!--android:layout_marginEnd="@dimen/avatar_margin"-->
            <!--android:layout_marginStart="@dimen/avatar_margin"-->
            <!--android:padding="@dimen/avatar_padding"-->
            <!--android:src="@color/material_cyan_50"-->
            <!--app:srcCompat="@drawable/ic_coin_outline" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/text_crypto_name"
            android:gravity="center"
            android:id="@+id/image_layout"
            android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/img_crypto"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        tools:src="@mipmap/ic_launcher_round"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>


        <ImageView
            android:id="@+id/img_world"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            tools:src="@mipmap/ic_launcher_round"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/image_layout"
        android:gravity="center">



        <TextView
            android:id="@+id/text_world_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="World"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginEnd="2dp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/text_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text=":"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/text_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12.00"
            android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryDark"/>




    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>